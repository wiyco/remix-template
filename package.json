{
  "name": "remix-template",
  "description": "Boilerplate of Remix project with Lint, TypeScript, SASS, Tailwind, Framer Motion, React Hook Form, Zod, Vitest, Storybook and more.",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "remix vite:dev",
    "build": "remix vite:build",
    "start": "remix-serve ./build/server/index.js",
    "lint": "npm run lint:eslint && npm run lint:stylelint && npm run lint:prettier",
    "lint:eslint": "eslint ./app --ext .js,jsx,.ts,.tsx",
    "lint:stylelint": "stylelint ./app/**/*.{css,scss}",
    "lint:prettier": "prettier --check './app/**/*.{js,jsx,ts,tsx,css,scss,md}'",
    "fix:eslint": "eslint ./app --ext .js,jsx,.ts,.tsx --fix",
    "fix:stylelint": "stylelint ./app/**/*.{css,scss} --fix",
    "fix:prettier": "prettier --check --write './app/**/*.{js,jsx,ts,tsx,css,scss,md}'",
    "format": "npm run fix:eslint && npm run fix:stylelint && npm run fix:prettier",
    "typecheck": "tsc",
    "test": "vitest",
    "story": "storybook dev -p 6006",
    "story:build": "storybook build"
  },
  "dependencies": {
    "@hookform/resolvers": "^3",
    "@remix-run/node": "^2",
    "@remix-run/react": "^2",
    "@remix-run/serve": "^2",
    "clsx": "^2",
    "framer-motion": "^11",
    "isbot": "^5",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7",
    "tailwind-merge": "^2",
    "zod": "^3"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1",
    "@remix-run/dev": "^2",
    "@storybook/addon-essentials": "^8",
    "@storybook/addon-interactions": "^8",
    "@storybook/addon-links": "^8",
    "@storybook/addon-onboarding": "^8",
    "@storybook/blocks": "^8",
    "@storybook/react": "^8",
    "@storybook/react-vite": "^8",
    "@storybook/test": "^8",
    "@testing-library/jest-dom": "^6",
    "@testing-library/react": "^16",
    "@types/eslint": "^8",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7",
    "@typescript-eslint/parser": "^7",
    "autoprefixer": "^10",
    "eslint": "^8",
    "eslint-config-prettier": "^9",
    "eslint-import-resolver-typescript": "^3",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jest-dom": "^5",
    "eslint-plugin-jsx-a11y": "^6",
    "eslint-plugin-react": "^7",
    "eslint-plugin-react-hooks": "^4",
    "eslint-plugin-simple-import-sort": "^12",
    "eslint-plugin-storybook": "^0",
    "eslint-plugin-testing-library": "^6",
    "eslint-plugin-unused-imports": "^3",
    "jsdom": "^25",
    "postcss": "^8",
    "prettier": "^3",
    "prettier-plugin-tailwindcss": "^0",
    "sass": "^1",
    "storybook": "^8",
    "stylelint": "^16",
    "stylelint-config-recess-order": "^5",
    "stylelint-config-standard": "^36",
    "stylelint-config-standard-scss": "^13",
    "stylelint-scss": "^6",
    "tailwindcss": "^3",
    "typescript": "^5",
    "vite": "^5",
    "vite-tsconfig-paths": "^5",
    "vitest": "^2"
  }
}
